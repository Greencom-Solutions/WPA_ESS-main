@model Latest_Staff_Portal.ViewModel.DutyStationNeeds

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Duty station/Admin Unit", new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.DropDownListFor(m => m.DutyStation, new SelectList(Model.ListOfDutyStations, "Value", "Text", Model.DutyStation), "--Select Duty Station--", new { id = "ddlDutyStation", @class = "form-control select2", onchange = "showSelectedText()" })
                @Html.ValidationMessageFor(model => model.DutyStation, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    
</div>

<div class="row">  

    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Remarks", new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                <textarea id="txtRemarks" class="form-control"></textarea>
            </div>
        </div>
    </div>
</div>


<hr />
<div align="center">
    <input type="button" class="btn btn-primary waves-effect waves-light" value="Create New" onclick="SubmitTrainingNeedRequest();" />
</div>

