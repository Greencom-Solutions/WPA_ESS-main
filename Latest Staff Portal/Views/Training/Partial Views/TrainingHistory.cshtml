@model IEnumerable<Latest_Staff_Portal.ViewModel.TrainingLists>
<div class="pre-scrollable">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
        <tr>
            @*<th></th>*@
            <th>No</th>
            <th>Training Category</th>
            <th>Course Title</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Provider</th>
            @*<th>Status</th>*@
        </tr>
        </thead>
        <tbody>
        @{
            if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                                <input type="button" onclick="SelectedRow('@item.Application_No','@item.Status');" style="background: #162f25; color:whitesmoke; border-radius:10px" value="Select" />
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Application_No)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Training_Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course_Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Trainer)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>*@
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" style="color:red">
                        No Records Found
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>