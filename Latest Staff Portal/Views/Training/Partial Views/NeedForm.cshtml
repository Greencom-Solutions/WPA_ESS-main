@model Latest_Staff_Portal.ViewModel.NeedsRequest

<style>
    .ui-front {
        z-index: 2000 !important;
    }
</style>
<div class="bg-soft-dark" style="color:black">
    <div class="row">
        <div class="col-md-12">
            <span style="font-weight: bold">Training Need</span>
            @Html.DropDownListFor(m => m.Course_ID, new SelectList(Model.ListOfNeeds, "Value", "Text", Model.Course_ID), "--Select Employee--", new { id = "ddlCourseID", @class = "form-control select2" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <span style="font-weight: bold">Source</span>
            <select id="DdlSource" name="DdlSource" class="form-control">
                <option value="">----</option>
                <option value="0">ANUPEAisal</option>
                <option value="3">Career Development</option>
                <option value="1">Goverment Directive</option> -
                <option value="2">Other</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            Comments
            <input type="text" class="form-control" id="txtComments" placeholder="Comments"/>
        </div>

    </div>


    <div align="center">
        <input type="button" class="btn btn-primary waves-effect waves-light" value="Save" onclick="SubmitTrainNeedLine();"/>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        //$("#ddlCourseID,#ddlExpenseCode").select2({
        //    width: '100%'
        //});
        $('#myModal').on('shown.bs.modal', function () {
            setTimeout(function () {
                $('.select2').select2({
                    dropdownParent: $('#myModal')
                });
            }, 200);
        })
    });

    function functionDecimal(evt, val) {
        try {
            var charCode = (evt.which) ? evt.which : event.keyCode;

            if (charCode == 46) {
                if (!(val.indexOf(".") > -1)) {
                    return true;
                }
                else {
                    Swal.fire('Warning', 'Kindly ensure to specify decimals only', 'warning');
                }
            }
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                Swal.fire('Warning', 'Kindly ensure to specify decimals only', 'warning');
                return false;
            }
            return true;
        } catch (w) {
            Swal.fire(w);
        }
    }
    function functionx(evt) {
        if (evt.charCode > 31 && (evt.charCode < 48 || evt.charCode > 57)) {
            Swal.fire("Error", "Please enter only numeric characters in the text box", "error");
            return false;
        }
    }
</script>