@model List<Latest_Staff_Portal.ViewModel.TNAQuestions>

<div>
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.Label("Q Id." + item.Question_ID + ": " + item.Question, new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        <textarea id="answer_@item.Question_ID" class="form-control"></textarea>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div align="center">
    <input type="button" class="btn btn-primary waves-effect waves-light" value="Submit Answers" onclick="SubmitTNAAnswers();"/>
</div>