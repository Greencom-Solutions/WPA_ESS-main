<script src="~/assets/js/ShowProgression.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $('#PurchaseOrderLine').DataTable({
            "paging": true,           
            "searching": false,
            "ordering": true,
            "info": false
        });
        LoadLines();
        
    });


    var LoadLines = function () {
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            data: JSON.stringify({
                DocNo: '@Model.No',
                Status: '@Model.Status'
            }),
            contentType: "application/json; charset=utf-8",
            processData: false,
            url: "/Purchase/ArchivedPurchaseOrderLines",
            success: function (data) {
                $(purchaseOrderLines).html(data);
                HideProgress();
            },
            error: function (err) {
                HideProgress();
            }
        });
    }

    var GenerateArchivedReport = function (DocNo, Version) {
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            data: JSON.stringify({ DocNo: DocNo, Version: Version }),
            contentType: "application/json; charset=utf-8",
            processData: false,
            url: '/Purchase/GenerateArchivedReport',
            success: function (data) {
                if (data.success) {
                    $("#modalBody").empty();

                    var iframe = $("<iframe>").attr({
                        src: "data:application/pdf;base64," + data.message,
                        width: "100%",
                        height: "500px",
                        frameborder: "0" 
                    });
                    $("#modalBody").append(iframe);
                    $("#myModal").modal("show");
                    HideProgress();
                } else {
                    Swal.fire('Error', data.message, 'error');
                    HideProgress();
                }
            },
            error: function (err) {
                HideProgress();
                Swal.fire('Warning', err, 'warning');
            }
        });
    }

</script>
