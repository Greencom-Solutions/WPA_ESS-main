@model IEnumerable<Latest_Staff_Portal.ViewModel.ProcurementPlan>
<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
            <tr>
                <th>Action</th>
                <th>Code</th>
                <th>Description</th>
                <th>Admin Unit Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="button" onclick="ViewDoc('@item.Code');" style="background: #162f25; color:whitesmoke; border-radius:10px" value="Select" />
                            </td>
                            <td>@item.Code</td>
                            <td>@item.Description</td>
                            <td>@item.Admin_Unit_Name</td>
                            <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                            <th>@item.ApprovalStatus</th>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" style="color:red">
                            No Records Found
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>
<script>
    $("#datatable-buttons").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100]
    });
</script>