@model IEnumerable<Latest_Staff_Portal.ViewModel.ApprovedPRNLineList>

<div class="table-responsive">
    <table id="PurchaseRequisitionLine1" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
        <tr>
            <th>Type</th>
            <th>Description</th>
            <th>Technical Specifications</th>
            <th>Quantity</th>
            <th>Unit Cost</th>
            <th>Amount</th>
            <th>Budget</th>
            <th>Charge Account</th>
            <th>PPTotal Available Budget</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Type</td>
                    <td>@item.Description</td>
                    <td>@item.TechnicalSpecifications</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitCostLCY</td>
                    <td>@item.Amount</td>
                    <td>@item.Budget</td>
                    <td>@item.Budget_Line</td>
                    <td>@item.PPTotalAvailableBudget</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" style="color:red">
                    No Records Found
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<hr/>
<script type="text/javascript">
    $(document).ready(function () {
        var status = '@Model.FirstOrDefault()?.Status';
        if (status == "Open") {
            $(".tdAction").show();
            $(".HideLineButton").show();
        }
        else {
            $(".tdAction").hide();
            $(".HideLineButton").hide();
        }
    });
</script>