@model IEnumerable<Latest_Staff_Portal.ViewModel.ProcurementPlanAmmendments>

<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
            <tr>
                <th>Action</th>
                <th>Code</th>
                <th>Type</th>
                <th>Plan No</th>
                <th>Description</th>
                <th>Approval Status</th>
                <th>Amendment Reason</th>
                <th>Created By</th>
                <th>Date Created</th>
                <th>Time Created</th>

            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" onclick="ViewDoc('@item.Code');" style="background: #162f25; color:whitesmoke; border-radius:10px" value="Select" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlanNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApprovalStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ammendment_Reason)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeCreated)
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<script>
    $("#datatable-buttons").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100]
    });
</script>