@model IEnumerable<Latest_Staff_Portal.ViewModel.PurchaseInvoice>
<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
            <tr>
                <th>Action</th>
                <th>
                    Document No.
                </th>
                <th>
                    Buy From Vendor
                </th>
                <th>
                    Buy From Vendor Name
                </th>
                <th>
                    Vendor Invoice No.
                </th>
                <th>
                    Amount
                </th>
                @if (ViewBag.PortalStatus == "Released")
                {
                    <th>
                        Status
                    </th>
                }
                @if (ViewBag.PortalStatus == "Posted")
                {
                    <th>
                        Remaining Amount
                    </th>
                    <th>
                        Closed
                    </th>
                    <th>
                        Cancelled
                    </th>
                    <th>
                        Corrective
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="button" onclick="ViewDoc('@item.No');" style="background: #162f25; color:whitesmoke; border-radius:10px" value="Select" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.No)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BuyFromVendorNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BuyFromVendorName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VendorInvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            @if (ViewBag.PortalStatus == "Released")
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                            }
                            @if (ViewBag.PortalStatus == "Posted")
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remaining_Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Closed)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cancelled)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Corrective)
                                </td>
                            }
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
<script>
    $("#datatable-buttons").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100]
    });
</script>