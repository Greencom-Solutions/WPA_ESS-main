@model IEnumerable<Latest_Staff_Portal.ViewModel.DocumentAttachment>
<style>
    .btnPadding {
        padding: 5px;
        font-size: 10px;
    }
</style>
<table class="table table-bordered table-hover" id="documentAttachements">
    <thead style="background-color: #9c6cac; color: white">
    <tr>
        <th>
            Name
        </th>
        <th>
            File Extention
        </th>
        <th>
            Document Type
        </th>
        <th>
            Action
        </th>
    </tr>
    </thead>
    <tbody>
    @{
        if (Model != null)
        {
            if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FileExtension)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DocumentType)
                        </td>
                        <td>
                            <button id="btnview" class="btn btn-primary btnPadding" onclick="ViewAttachment('@item.No','@item.DocumentId','@item.DocumentType');">View Attachment</button>
                        </td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" style="color:red">
                        No Files Found
                    </td>
                </tr>
            }
        }
    }
    </tbody>
</table>

<script type="text/javascript">
	$(document).ready(function () {
		// Count the number of rows in the table (excluding header and empty message row)
		var rowCount = $('#documentAttachments tbody tr').length;
		if ($('#documentAttachments tbody tr td[colspan="4"]').length > 0) {
			rowCount = 0;
        }
	});
</script>