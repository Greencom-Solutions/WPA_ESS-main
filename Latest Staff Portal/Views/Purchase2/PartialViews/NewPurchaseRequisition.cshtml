@model Latest_Staff_Portal.ViewModel.PurchaseRequisitions

<div class="row">
    @if (!string.IsNullOrEmpty(Model.No))
    {
       <div class="col-md-6">
           <div class="form-group">
               @Html.Label("No", htmlAttributes: new { @class = "control-label col-md-2" })
               <input class="form-control"  type="text" id="No" value="@Model.No" disabled />         
           </div>
       </div>
    }
    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("PRN Type", htmlAttributes: new { @class = "control-label col-md-2" })

            <select class="form-control" id="PRNType">
                <option value="" selected hidden>Select Option</option>
                <option value="0">Standard</option>
                <option value="1">Project Works</option>
            </select>
        </div>
    </div>
    @* <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Document Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" class="form-control" placeholder="dd/mm/yyyy" id="Document_Date" onkeydown="return false;" autocomplete="off" />
                @Html.ValidationMessageFor(model => model.Document_Date, "", new { @class = "text-danger" })
            </div>
        </div>*@
    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Location", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(m => m.Location_Code, Model.ListOfLocation_Code, "Select Option--", new { @class = "form-control", @id = "Location_Code" })
            @Html.ValidationMessageFor(model => model.Location_Code, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Requisition Product Group", htmlAttributes: new { @class = "control-label col-md-2" })
            <select class="form-control" id="Requisition_Product_Group">
                <option value="" selected hidden>Select Option</option>
                <option value="0">Goods</option>
                <option value="1">Services</option>
                <option value="2">Works</option>
            </select>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("PP Planning Category", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(m => m.PP_Planning_Category, Model.ListOfPP_Planning_Category, "Select Option--", new { @class = "form-control", @id = "PP_Planning_Category" })

            @Html.ValidationMessageFor(model => model.PP_Planning_Category, "", new { @class = "text-danger" })
        </div>
    </div>


</div>

<script>
    $(document).ready(function () {
        // Initialize datepickers
        $('#Document_Date').datepicker({
            changeMonth: true,
            changeYear: true,
            autoclose: true,
            yearRange: '-1:+2',
            showOtherMonths: true,
            dateFormat: 'dd/mm/yy'
        });

        // Adjust the position of the datepicker for both fields
        $('#Document_Date').focus(function () {
            $("#ui-datepicker-div").position({
                my: "left top",
                at: "left bottom",
                of: $(this)
            });
        });

        // Set default value to today's date
        var today = new Date();
        var day = ("0" + today.getDate()).slice(-2);
        var month = ("0" + (today.getMonth() + 1)).slice(-2);
        var todayFormatted = day + "/" + month + "/" + today.getFullYear();
        $('#Document_Date').val(todayFormatted);
    });
</script>
