@model IEnumerable<Latest_Staff_Portal.ViewModel.EmployeeExitVoucher>

@{
    ViewBag.Title = "EmployeeExitVoucherListPartialView";
}

<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
            <tr>
                <th>Action</th>
                <th>Document No</th>
                @* <th>Description</th>*@
                <th>Employee No</th>
                <th>Employee Names</th>
                <th>Exit Method</th>
                <th>Job ID</th>
                <th>Reasons Code</th>
           
            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" onclick="ViewDoc('@item.DocumentNo');" class="btn btn-primary btn-sm action-buttons" value="Select" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentNo)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeNames)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExitMethod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReasonsCode)
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#datatable").DataTable(), $("#datatable-buttons").DataTable({
            lengthChange: !1
        }).buttons().container().appendTo("#datatable-buttons_wrapper .col-md-6:eq(0)")
    });
</script>