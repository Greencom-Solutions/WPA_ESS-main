        <h4>Fuel Requisition Document(@Model.Requisition_No)</h4>
        <div style="text-align: right">
            @{

                if (Model.Status == "Open")
                {
                    <div>
                        <input type="button" class="btn btn-primary action-buttons" value="Send (@Model.Requisition_No) For Approval" onclick="SendDocForApproval('@Model.Requisition_No');" />
